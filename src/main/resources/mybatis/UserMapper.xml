<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pethospital.base.dao.UserDao">
  <insert id="insertUser" parameterType="base.model.UserInfo" useGeneratedKeys="true"
    keyProperty="user_id">
    insert into tb_user(user_name, password,authority,label_type)
    values(#{userName,jdbcType=VARCHAR},
            #{password,jdbcType=VARCHAR},
            0,
            #{labelType,jdbcType=VARCHAR});
  </insert>
  <update id="updatePassword" parameterType="base.model.UserInfo">
      UPDATE tb_user
      SET tb_user.password = #{password}
      WHERE tb_user.user_name = #{userName};
  </update>
</mapper>