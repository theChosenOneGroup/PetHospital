<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pethospital.base.dao.PicAndVideoDao">
  <insert id="insertPicAndVideo" parameterType="base.model.PicAndVideoInfo" useGeneratedKeys="true"
    keyProperty="id">
    insert into tb_picnvideo(type,path)
    values(#{type,jdbcType=DECIMAL},
    #{path,jdbcType=VARCHAR})
  </insert>

  <select id="selectByName" parameterType="String" resultType="base.model.PicAndVideoInfo">
    select id ,type ,path from tb_picnvideo where path like #{name,jdbcType=VARCHAR}
  </select>

  <select id="selectAll" resultType="base.model.PicAndVideoInfo">
    select id ,type ,path from tb_picnvideo
  </select>

</mapper>