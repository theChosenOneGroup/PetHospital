<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pethospital.base.dao.ExamDao">

    <delete id="delete" parameterType="base.model.ExamInfo" >
        delete from tb_paper where question_id=#{questionId}
    </delete>

    <update id="update" parameterType="base.model.ExamInfo">
        update tb_paper set duration= #{duration} where label_type= #{labelType}
    </update>

    <insert id="insertExam" parameterType="base.model.ExamInfo" useGeneratedKeys="true"
            keyProperty="exam_id">
        insert into tb_paper(label_type, question_id,start_date,end_date,duration)
        values(#{labelType,jdbcType=VARCHAR},
        #{questionId,jdbcType=VARCHAR},
        #{startDate,jdbcType=DATE},
        #{endDate,jdbcType=DATE},
        #{duration,jdbcType=VARCHAR}
        );
    </insert>
    <select id="selectExam" parameterType="String" resultType="base.model.ExamInfo">
        select paper_id as paperId,label_type as labelType,question_id as questionId,start_date as startDate,
        end_date as endDate,duration as duration from tb_paper where label_type = #{labelType}
    </select>
</mapper>